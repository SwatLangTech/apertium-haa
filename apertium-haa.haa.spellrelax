	! [ ?* [ á (->) a ] ?* ]

	! accept 'u' for 'wë'
	.o. [ ?* [ w e ̈ (->) u ] ?* ]

	.o. [ ?* [  ̨  ̈    (->)  ̈  ̨  ] ?* ]

	.o. [ ?* [ i  ̨ (->) į ] ?* ]

